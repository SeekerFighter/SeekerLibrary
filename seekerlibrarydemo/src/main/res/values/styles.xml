<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/MenuitemHeight</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="com.seeker.demo:textColor">@color/textColor</item>
        <item name="com.seeker.demo:textSize">@dimen/textSize2</item>
        <item name="com.seeker.demo:itemType">arrowType</item>
    </style>


</resources>
